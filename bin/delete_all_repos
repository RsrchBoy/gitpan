#!/usr/bin/env perl

use Gitpan::perl5i;

use Gitpan::Github;

my $gh = Gitpan::Github->new( repo => "whatever" );

my @repos = map { $_->{name} } $gh->repos->list_org("gitpan-test");
while($gh->repos->has_next_page) {
    push @repos, map { $_->{name} } $gh->repos->next_page;
}

say @repos->join(", ");
say "Delete these repos?";
my $ans = <STDIN>;
exit unless $ans =~ /^y/i;

for my $repo (@repos) {
    say "Deleting $repo";
    $gh->repos->delete("gitpan-test", $repo);
}
